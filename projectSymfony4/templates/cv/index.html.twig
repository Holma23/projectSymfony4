{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/flick/jquery-ui.css">
{% endblock %}
{% block title %}Dashbord Admin Cvs {% endblock %}

{% block body %}
    <div align="center">
<br>
    <button class="btn btn-secondary col-md-8 m-5 "><h1>Dashbord Admin Cvs </h1></button><br>
        <input type="text" id="weekPicker">
        <div class="col-md-8">
            <table id="table_id" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th class="th-sm">Id</th>
            <th class="th-sm">File</th>
            <th class="th-sm">Titre</th>
            <th class="th-sm">Description</th>
            <th class="th-sm">actions</th>
        </tr>
        </thead>
        <body>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td align="center"> <a href="uploads/{{ cv.file }}"> <img src="theme/img/telecharger.ico" width="30" height="30"> </a> </td>
                <td>{{ cv.titre }}</td>
                <td>{{ cv.description }}</td>
                <td>
                    <button class="alert-secondary col-md-12"><a href="{{ path('cv_show', {'id': cv.id}) }}">show</a></button>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </body>
    </table>

{#    <button class="alert-dark col-md-12"><a href="{{ path('cv_new') }}">Create new</a></button>#}
            <button class="alert-dark col-md-12"><a href="{{ path('app_home') }}"> <i class="fas fa-home"></i> Home</a></button>
    </div>
    </div>

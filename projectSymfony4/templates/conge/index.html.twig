{% extends 'base.html.twig' %}

{% block title %}Dashbord Admin Conges{% endblock %}

{% block body %}
    <div align="center">
        <br>
        <button class="btn btn-secondary col-md-8 m-5 "><h1>Dashbord Admin Conge </h1></button><br>
        <div class="col-md-8">
            <table id="table_id" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th class="th-sm">Id</th>
                    <th class="th-sm">Nature</th>
                    <th class="th-sm">DateDebut</th>
                    <th class="th-sm">Nombre de jour</th>
                    <th class="th-sm">Employer</th>
                    <th class="th-sm">Etat</th>
                    <th class="th-sm">actions</th>
                </tr>
                </thead>
                <body>
                {% for conge in conges %}
                    <tr>
                        <td >{{ conge.id }}</td>
                        <td >{{ conge.nature }}</td>
                        <td>{{ conge.date|date() }}</td>
                        <td>{{ conge.nbreJour}}</td>
                        <td>{{ conge.user}}</td>
                        <td>{{ conge.etat}}</td>
                        <td>
                            <button class="btn btn-secondary col-md-12"><a href="{{ path('conge_show', {'id': conge.id}) }}">show conge</a></button>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </body>
            </table>

            {#    <button class="alert-dark col-md-12"><a href="{{ path('cv_new') }}">Create new</a></button>#}
            <button class="btn btn-info  col mt-1-md-12 mb-2 mt-2"><a href="{{ path('app_home') }}">Home</a></button>
        </div>
    </div>

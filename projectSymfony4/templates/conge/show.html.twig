{% extends 'base.html.twig' %}

{% block title %}Cv{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('refus') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div align="center">
        <br>
        <button class="btn btn-secondary col-md-8 m-5 "><h1>Dashbord Admin Show conge</h1></button><br>
        <div class="col-md-7">
            <h1>Conge {{ conge.user }}</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ conge.id }}</td>
                </tr>
                <tr>
                    <th>Nature</th>
                    <td > {{ conge.nature }} </td>
                </tr>
                <tr>
                    <th>Etat</th>
                    <td>{{ conge.etat }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ conge.date|date }}</td>
                </tr>
                <tr>
                    <th>Nombre de jour</th>
                    <td>{{ conge.nbreJour }}</td>
                </tr>
                <tr>
                    <th>Employer</th>
                    <td>{{ conge.user }}</td>
                </tr>
                <tr>
                    <th>Action</th>
                    <td>
                    <button class="btn btn-info col-md-12 mb-2"><a href="{{ path('conge_accept', {'id': conge.id}) }}"><strong><i class="fas fa-check"></i> Accept</strong></a></button>
                        <br>
                    <button class="btn btn-danger col-md-12"><a href="{{ path('conge_refus', {'id': conge.id}) }}"><strong><i class="fas fa-ban"></i> Refus</strong></a></button>
                    </td>
                </tr>
                </tbody>
            </table>

            <button class="alert-secondary col-md-12 mb-3 p-1"><a href="{{ path('conge_list') }}">back to list</a></button>
            <button class="btn btn-secondary col-md-12"><a href="{{ path('app_home') }}">Home</a></button>
            {#       <a href="{{ asset('pubic\uploads' ~ cv.file) }}">View file (PDF)</a>#}
        </div>
    </div>

{% endblock %}